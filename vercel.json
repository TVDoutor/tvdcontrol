{
  "buildCommand": "npm install --prefix backend && npm run build:backend && npm run build:frontend",
  "outputDirectory": "dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/((?!api/)(?!assets/).*)", "destination": "/index.html" }
  ]
}
